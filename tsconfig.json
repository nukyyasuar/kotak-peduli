{
  "compilerOptions": {
    "target": "ES2017",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "noEmit": true,
    "incremental": true,
    "module": "esnext",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": ".", // Set the base directory (usually the root of your project)
    "paths": {
      "@/*": ["./*"], // Example: '@/' maps to the root directory
      "@components/*": ["components/*"], // Example: '@components/' maps to the 'components' folder
      "@utils/*": ["utils/*"] // Example: '@utils/' maps to the 'utils' folder
    }
  },
  "include": [
    "next-env.d.ts",
    ".next/types/**/*.ts",
    "**/*.ts",
    "**/*.tsx"
, "src/app/layout.jsx", "src/services/helpers.jsx", "src/services/api/register.jsx", "src/services/api/login.jsx", "src/services/auth/firebase.jsx"  ],
  "exclude": [
    "node_modules"
  ]
}